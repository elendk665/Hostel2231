<Window x:Class="Hostel223.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Панель менеджера" 
        Height="654" 
        Width="683"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#107C10" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Панель менеджера" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>

                <TextBlock x:Name="UserInfoTextBlock" 
                           Margin="20,0,0,0"
                           FontSize="14"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Функции менеджера:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Button Content="Бронирование номеров" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="BookingManagementButton_Click"/>

                <Button Content="Просмотр бронирований" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="ViewBookingsButton_Click"/>

                <Button Content="Управление клиентами" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="ClientsManagementButton_Click"/>

                <Button Content="Статистика" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="StatisticsButton_Click"/>
            </StackPanel>

            <TextBlock Text="Активные бронирования:" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,30,0,10"/>

            <ListView x:Name="ActiveBookingsList" Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Номер" Width="80" DisplayMemberBinding="{Binding RoomNumber}"/>
                        <GridViewColumn Header="Клиент" Width="120" DisplayMemberBinding="{Binding ClientName}"/>
                        <GridViewColumn Header="Заезд" Width="80" DisplayMemberBinding="{Binding CheckInDate, StringFormat=dd.MM.yyyy}"/>
                        <GridViewColumn Header="Выезд" Width="80" DisplayMemberBinding="{Binding CheckOutDate, StringFormat=dd.MM.yyyy}"/>
                        <GridViewColumn Header="Статус" Width="80" DisplayMemberBinding="{Binding Status}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Выйти" 
                    Click="LogoutButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>