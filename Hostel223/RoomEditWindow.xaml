<Window x:Class="Hostel223.RoomEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование номера" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Редактирование номера" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Label Grid.Row="1" Content="Номер:" VerticalAlignment="Center"/>
        <TextBox x:Name="NumberTextBox" Grid.Row="1" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Content="Тип:" VerticalAlignment="Center"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="2" Margin="80,5,0,5" Height="25" VerticalAlignment="Center">
            <ComboBoxItem Content="Одноместный"/>
            <ComboBoxItem Content="Двухместный"/>
            <ComboBoxItem Content="Трехместный"/>
            <ComboBoxItem Content="Люкс"/>
        </ComboBox>

        <Label Grid.Row="3" Content="Цена:" VerticalAlignment="Center"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="3" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="4" Content="Статус:" VerticalAlignment="Center"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="4" Margin="80,5,0,5" Height="25" VerticalAlignment="Center">
            <ComboBoxItem Content="Свободен"/>
            <ComboBoxItem Content="Занят"/>
            <ComboBoxItem Content="На обслуживании"/>
        </ComboBox>

        <Label Grid.Row="5" Content="Вместимость:" VerticalAlignment="Center"/>
        <TextBox x:Name="CapacityTextBox" Grid.Row="5" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="6" Content="Описание:" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="6" Margin="80,5,0,5" Height="60" VerticalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="True"/>

        <TextBlock x:Name="ErrorTextBlock" Grid.Row="7" 
                   Foreground="Red" 
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,10,10,10"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="10,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>