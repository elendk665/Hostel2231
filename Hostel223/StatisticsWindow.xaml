<Window x:Class="Hostel223.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика" 
        Height="530" 
        Width="841"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#0078D7" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Статистика хостела" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <TabControl Margin="10">
            <TabItem Header="Общая статистика">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="Загрузка номеров" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Всего номеров:" Margin="5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalRoomsText" Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Занято номеров:" Margin="5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="OccupiedRoomsText" Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Загрузка:" Margin="5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OccupancyRateText" Margin="5"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Финансы" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Доход за месяц:" Margin="5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MonthlyIncomeText" Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Средний чек:" Margin="5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AverageBillText" Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Всего бронирований:" Margin="5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalBookingsText" Margin="5"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Популярность номеров">
                            <ListView x:Name="PopularRoomsList" Height="150">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Номер" Width="80" DisplayMemberBinding="{Binding Number}"/>
                                        <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                                        <GridViewColumn Header="Бронирований" Width="100" DisplayMemberBinding="{Binding BookingCount}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Графики">
                <StackPanel Margin="10">
                    <TextBlock Text="Графики загрузки будут здесь" FontSize="14" FontWeight="Bold"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="200" Margin="0,10">
                        <TextBlock Text="График загрузки номеров (место для визуализации)" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="200" Margin="0,10">
                        <TextBlock Text="График доходов (место для визуализации)" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>