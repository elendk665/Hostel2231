<Window x:Class="Hostel223.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Панель гостя" 
        Height="600" 
        Width="702"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="0,0,0,-57">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FFB900" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Панель гостя" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="Black"/>

                <TextBlock x:Name="UserInfoTextBlock" 
                           Margin="20,0,0,0"
                           FontSize="14"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Добро пожаловать в Hostel223!" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Button Content="Забронировать номер" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="BookRoomButton_Click"/>

                <Button Content="Мои бронирования" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="MyBookingsButton_Click"/>

                <Button Content="Справочная информация" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="HelpInfoButton_Click"/>
            </StackPanel>

            <TextBlock Text="Доступные номера:" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,30,0,10"/>

            <ListView x:Name="AvailableRoomsList" Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Номер" Width="80" DisplayMemberBinding="{Binding Number}"/>
                        <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                        <GridViewColumn Header="Цена" Width="80" DisplayMemberBinding="{Binding Price}"/>
                        <GridViewColumn Header="Вместимость" Width="80" DisplayMemberBinding="{Binding Capacity}"/>
                        <GridViewColumn Header="Описание" Width="200" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Выйти" 
                    Click="LogoutButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>