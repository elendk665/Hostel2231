<Window x:Class="Hostel223.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Панель администратора" 
        Height="402" 
        Width="648"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#0078D7" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Панель администратора" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>

                <TextBlock x:Name="UserInfoTextBlock" 
                           Margin="20,0,0,0"
                           FontSize="14"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Функции администратора:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Button x:Name="UsersManagementButton"
                        Content="Управление пользователями" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="UsersManagementButton_Click"/>

                <Button x:Name="RoomsManagementButton"
                        Content="Управление номерами" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="RoomsManagementButton_Click"/>

                <Button x:Name="StatisticsButton"
                        Content="Просмотр статистики" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"
                        Click="StatisticsButton_Click"/>
            </StackPanel>

            <Button Content="Выйти" 
                    Click="LogoutButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>