<Window x:Class="Hostel223.RoomsManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление номерами" Height="537" Width="837"
        Loaded="Window_Loaded">

    <Grid Margin="0,0,0,-2" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.011"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0078D7" Padding="10">
            <TextBlock Text="Управление номерами" FontSize="16" FontWeight="Bold" Foreground="White"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" Height="35">
            <Button Content="Добавить номер" Click="AddRoomButton_Click" Margin="5,0" Width="120"/>
            <Button Content="Редактировать" Click="EditRoomButton_Click" Margin="5,0" Width="100"/>
            <Button Content="Удалить" Click="DeleteRoomButton_Click" Margin="5,0" Width="80"/>
            <Button Content="Обновить" Click="RefreshButton_Click" Margin="5,0" Width="80"/>

            <Label Content="Фильтр по статусу:" Margin="20,0,5,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="120" Margin="5,0" SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                <ComboBoxItem Content="Свободен"/>
                <ComboBoxItem Content="Занят"/>
                <ComboBoxItem Content="На обслуживании"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="RoomsDataGrid" Grid.Row="2" Margin="10,10,39,47" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="80"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Вместимость" Binding="{Binding Capacity}" Width="80"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" Margin="358,399,358,4">
            <TextBlock x:Name="StatusTextBlock" Text="Готово"/>
        </StatusBar>
    </Grid>
</Window>