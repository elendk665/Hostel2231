<Window x:Class="Hostel223.ClientsManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление клиентами" 
        Height="474" 
        Width="749"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#107C10" Padding="10">
            <TextBlock Text="Управление клиентами" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Height="35">
            <Button Content="Добавить клиента" Width="120" Margin="5,0" Click="AddClientButton_Click"/>
            <Button Content="История бронирований" Width="140" Margin="5,0" Click="ViewClientHistoryButton_Click"/>
            <Button Content="Обновить" Width="80" Margin="5,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="ClientsDataGrid" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="ФИО" Width="200" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Логин" Width="150" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Телефон" Width="120" Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="Всего бронирований" Width="120" Binding="{Binding TotalBookings}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>