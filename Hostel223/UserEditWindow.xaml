<Window x:Class="Hostel223.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="15">
        <TextBlock Text="Редактирование пользователя" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="ФИО:" Margin="0,5"/>
        <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Логин:" Margin="0,5"/>
        <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

        <TextBlock Text="Роль:" Margin="0,5"/>
        <ComboBox x:Name="RoleComboBox" Margin="0,0,0,20">
            <ComboBoxItem Content="Администратор"/>
            <ComboBoxItem Content="Пользователь"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>