<Window x:Class="Hostel223.BookingsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр всех бронирований" 
        Height="542" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#107C10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Все бронирования" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <ComboBox x:Name="StatusFilterComboBox" Width="150" Margin="20,0,0,0"
                          SelectionChanged="StatusFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                    <ComboBoxItem Content="Активно"/>
                    <ComboBoxItem Content="Подтверждено"/>
                    <ComboBoxItem Content="Завершено"/>
                    <ComboBoxItem Content="Отменено"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <DataGrid x:Name="AllBookingsDataGrid" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True" Height="404" Width="801">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Клиент" Width="150" Binding="{Binding ClientName}"/>
                <DataGridTextColumn Header="Номер" Width="80" Binding="{Binding RoomNumber}"/>
                <DataGridTextColumn Header="Тип номера" Width="100" Binding="{Binding RoomType}"/>
                <DataGridTextColumn Header="Заезд" Width="90" Binding="{Binding CheckInDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Выезд" Width="90" Binding="{Binding CheckOutDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Ночей" Width="60" Binding="{Binding Nights}"/>
                <DataGridTextColumn Header="Стоимость" Width="80" Binding="{Binding TotalPrice, StringFormat={}₽}"/>
                <DataGridTextColumn Header="Статус" Width="100" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>