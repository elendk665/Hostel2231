<Window x:Class="Hostel223.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Вход в систему" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Вход в систему Hostel223" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Label Grid.Row="1" Content="Логин:" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="1" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Content="Пароль:" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Button Grid.Row="4" 
                Content="Войти" 
                Click="LoginButton_Click" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Left"
                Margin="68,10,0,10"/>
        <Button Grid.Row="4" 
            Content="Регистрация" 
            Click="RegisterButton_Click" 
            Width="100" 
            Height="30" 
            HorizontalAlignment="Left"
            Margin="208,10,0,10"/>
    </Grid>
</Window>