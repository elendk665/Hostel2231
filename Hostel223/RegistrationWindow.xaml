<Window x:Class="Hostel223.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Регистрация" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Регистрация в системе Hostel223" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Label Grid.Row="1" Content="ФИО:" VerticalAlignment="Center"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="1" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Content="Логин:" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="2" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="3" Content="Пароль:" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="4" Content="Подтверждение:" VerticalAlignment="Center"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="4" Margin="80,5,0,5" Height="25" VerticalAlignment="Center"/>

        <Label Grid.Row="5" Content="Роль:" VerticalAlignment="Center"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="5" Margin="80,5,0,5" Height="25" VerticalAlignment="Center">
            <ComboBoxItem Content="Гость" IsSelected="True"/>
            <ComboBoxItem Content="Менеджер"/>
        </ComboBox>

        <TextBlock x:Name="ErrorTextBlock" Grid.Row="6" 
                   Foreground="Red" 
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" 
                    Click="RegisterButton_Click" 
                    Width="120" 
                    Height="30" 
                    Margin="0,10,10,10"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="10,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>