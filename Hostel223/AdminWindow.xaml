<Window x:Class="Hostel223.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Панель администратора" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#0078D7" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Панель администратора" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>

                <TextBlock x:Name="UserInfoTextBlock" 
                           Margin="20,0,0,0"
                           FontSize="14"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Функции администратора:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Button Content="Управление пользователями" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>

                <Button Content="Управление номерами" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>

                <Button Content="Просмотр статистики" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>

                <Button Content="Системные настройки" 
                        Width="200" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="Текущие действия:" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,30,0,10"/>

            <ListView Height="150">
                <ListViewItem>Просмотр логов системы</ListViewItem>
                <ListViewItem>Настройка прав доступа</ListViewItem>
                <ListViewItem>Управление резервными копиями</ListViewItem>
            </ListView>

            <Button Content="Выйти" 
                    Click="LogoutButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>