<Window x:Class="Hostel223.UsersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователями" 
        Height="588" 
        Width="810"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#0078D7" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Управление пользователями" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Height="35">
            <Button Content="Добавить пользователя" Width="150" Margin="5,0" Click="AddUserButton_Click"/>
            <Button Content="Редактировать" Width="100" Margin="5,0" Click="EditUserButton_Click"/>
            <Button Content="Удалить" Width="80" Margin="5,0" Click="DeleteUserButton_Click"/>
            <Button Content="Обновить" Width="80" Margin="5,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Users List -->
        <DataGrid x:Name="UsersDataGrid" 
                  DockPanel.Dock="Top"
                  Margin="10" 
                  Height="350"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="ФИО" Width="200" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Логин" Width="150" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Роль" Width="100" Binding="{Binding Role}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Height="68" Width="82">
                <TextBlock x:Name="StatusTextBlock" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>