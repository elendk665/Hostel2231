<Window x:Class="Hostel223.EditBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование бронирования" 
        Height="603" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#107C10" CornerRadius="5" Padding="15,10" Margin="0,0,0,15">
            <TextBlock Text="Редактирование бронирования" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Информация о бронировании -->
        <GroupBox Grid.Row="1" Grid.ColumnSpan="3" Header="Информация о бронировании" FontWeight="Bold" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID бронирования:" FontWeight="SemiBold" Margin="5"/>
                <TextBlock x:Name="BookingIdText" Grid.Row="0" Grid.Column="1" FontWeight="Bold" Foreground="#107C10" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Статус:" FontWeight="SemiBold" Margin="5"/>
                <ComboBox x:Name="StatusComboBox" Grid.Row="0" Grid.Column="3" Margin="5" Height="25" FontSize="12">
                    <ComboBoxItem Content="Подтверждено"/>
                    <ComboBoxItem Content="Активно"/>
                    <ComboBoxItem Content="Завершено"/>
                    <ComboBoxItem Content="Отменено"/>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Клиент:" FontWeight="SemiBold" Margin="5"/>
                <TextBlock x:Name="ClientText" Grid.Row="1" Grid.Column="1" Margin="5" FontWeight="Normal"/>
            </Grid>
        </GroupBox>

        <!-- Данные бронирования -->
        <GroupBox Grid.Row="2" Grid.ColumnSpan="3" Header="Данные бронирования" FontWeight="Bold" Margin="0,0,0,15">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Номер -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="RoomComboBox" Grid.Row="0" Grid.Column="1" Margin="5" Height="28"
                          DisplayMemberPath="Number" SelectionChanged="RoomComboBox_SelectionChanged"
                          FontSize="12"/>

                <!-- Тип номера -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Тип:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock x:Name="RoomTypeText" Grid.Row="0" Grid.Column="4" Margin="5" VerticalAlignment="Center" 
                           FontWeight="SemiBold" Foreground="#333"/>

                <!-- Цена -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Цена за ночь:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock x:Name="RoomPriceText" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center" 
                           FontWeight="Bold" Foreground="#107C10" FontSize="13"/>

                <!-- Даты -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата заезда:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="CheckInDatePicker" Grid.Row="2" Grid.Column="1" Margin="5" Height="28"
                           SelectedDateChanged="Dates_Changed" FontSize="12"/>

                <TextBlock Grid.Row="2" Grid.Column="3" Text="Дата выезда:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="CheckOutDatePicker" Grid.Row="2" Grid.Column="4" Margin="5" Height="28"
                           SelectedDateChanged="Dates_Changed" FontSize="12"/>
            </Grid>
        </GroupBox>

        <!-- Расчет стоимости -->
        <GroupBox Grid.Row="3" Grid.ColumnSpan="3" Header="Расчет стоимости" FontWeight="Bold" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Border Background="#E8F5E8" CornerRadius="5" Padding="15,10" Margin="5">
                    <StackPanel>
                        <TextBlock x:Name="NightsText" Text="Количество ночей: 0" FontWeight="SemiBold" 
                                   Foreground="#333" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalPriceText" Text="Общая стоимость: 0₽" FontWeight="Bold" 
                                   Foreground="#107C10" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- Сообщение об ошибке -->
        <Border Grid.Row="4" Grid.ColumnSpan="3" x:Name="ErrorBorder" 
                Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" 
                CornerRadius="5" Margin="0,0,0,15" Visibility="Collapsed">
            <TextBlock x:Name="ErrorTextBlock" Margin="10,8" Foreground="#D32F2F" 
                       TextWrapping="Wrap" FontWeight="SemiBold"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="💾 Сохранить" 
                    Width="120" Height="35" Margin="10,5" 
                    Background="#107C10" Foreground="White" FontWeight="Bold"
                    Click="SaveButton_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0D6B0D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="✕ Отмена" 
                    Width="100" Height="35" Margin="10,5" 
                    Background="#6C757D" Foreground="White" FontWeight="Bold"
                    Click="CancelButton_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Подсказка -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="3" Text="* При изменении номера или дат автоматически пересчитывается стоимость"
                   FontStyle="Italic" Foreground="#666" FontSize="11" HorizontalAlignment="Center" Margin="0,5"/>
    </Grid>
</Window>