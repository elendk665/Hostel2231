<Window x:Class="Hostel223.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hostel223 - Панель гостя" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FFB900" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Панель гостя" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="Black"/>

                <TextBlock x:Name="UserInfoTextBlock" 
                           Margin="20,0,0,0"
                           FontSize="14"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Добро пожаловать в Hostel223!" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Button Content="Забронировать номер" 
                        Width="180" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>

                <Button Content="Мои бронирования" 
                        Width="180" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>

                <Button Content="Справочная информация" 
                        Width="180" 
                        Height="35" 
                        Margin="0,5"
                        FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="Доступные номера:" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,30,0,10"/>

            <ListView Height="120">
                <ListViewItem>Номер 101 - 2-местный, 1500 руб/ночь</ListViewItem>
                <ListViewItem>Номер 102 - 3-местный, 2000 руб/ночь</ListViewItem>
                <ListViewItem>Номер 201 - 1-местный, 1000 руб/ночь</ListViewItem>
            </ListView>

            <Button Content="Выйти" 
                    Click="LogoutButton_Click" 
                    Width="100" 
                    Height="30" 
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>