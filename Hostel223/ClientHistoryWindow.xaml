<Window x:Class="Hostel223.ClientHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История бронирований клиента" 
        Height="407" 
        Width="803"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#107C10" Padding="10">
            <TextBlock x:Name="TitleText" 
                       Text="История бронирований" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <DataGrid x:Name="ClientBookingsDataGrid" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Номер" Width="80" Binding="{Binding RoomNumber}"/>
                <DataGridTextColumn Header="Тип номера" Width="100" Binding="{Binding RoomType}"/>
                <DataGridTextColumn Header="Заезд" Width="90" Binding="{Binding CheckInDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Выезд" Width="90" Binding="{Binding CheckOutDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Ночей" Width="60" Binding="{Binding Nights}"/>
                <DataGridTextColumn Header="Стоимость" Width="80" Binding="{Binding TotalPrice, StringFormat={}₽}"/>
                <DataGridTextColumn Header="Статус" Width="100" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Закрыть" Width="80" Height="30" Click="CloseButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>